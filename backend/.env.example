# SQLite DB file
DB_PATH=./data/app.db

# Base64-encoded salt for key derivation (generate with: python -c "import base64, os; print(base64.b64encode(os.urandom(16)).decode())")
SECRET_SALT=<BASE64_RANDOM>

# Ollama config
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_TIMEOUT=30

# Frontend URL for CORS
CORS_ORIGINS=http://localhost:3000

# Login rate-limit (attempts per minute)
LOGIN_RATE_LIMIT=5

# Session timeout (minutes)
SESSION_TIMEOUT=30