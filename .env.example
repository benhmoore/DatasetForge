# SQLite DB file
DB_PATH=./data/app.db

# Ollama config (points to a locally managed Ollama instance)
# Use "host.docker.internal" when running in Docker to access host machine's Ollama
# Use "localhost" when running directly on the host machine
OLLAMA_HOST=host.docker.internal
OLLAMA_PORT=11434
OLLAMA_TIMEOUT=120

# Frontend URL for CORS
CORS_ORIGINS=http://localhost:3000

# Default model settings
DEFAULT_GEN_MODEL=gemma3:latest
DEFAULT_PARA_MODEL=gemma3:latest
GEN_MODEL_CONTEXT_SIZE=8192
PARA_MODEL_CONTEXT_SIZE=4096

# Frontend API client timeout (milliseconds)
VITE_API_TIMEOUT_MS=120000