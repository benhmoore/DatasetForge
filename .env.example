# SQLite DB file
DB_PATH=./data/app.db

# Base64-encoded salt for key derivation
# You can generate a random salt with: python -c "import base64, os; print(base64.b64encode(os.urandom(16)).decode())"
SECRET_SALT=YourRandomSaltHere==

# Ollama config (points to a locally managed Ollama instance)
# Use "host.docker.internal" when running in Docker to access host machine's Ollama
# Use "localhost" when running directly on the host machine
OLLAMA_HOST=host.docker.internal
OLLAMA_PORT=11434
OLLAMA_TIMEOUT=30

# Frontend URL for CORS
CORS_ORIGINS=http://localhost:3000

# Login rate-limit (attempts per minute)
LOGIN_RATE_LIMIT=5

# Session timeout (minutes)
SESSION_TIMEOUT=30